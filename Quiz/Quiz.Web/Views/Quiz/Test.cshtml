@model Quiz.Services.ViewModels.QuizViewModel
@{
    ViewData["Title"] = Model.Title;
}
<h1>@ViewData["Title"]</h1>


<form method="post" action="/Quiz/Submit/?quizId=@Model.Id">
    @foreach (var question in Model.Questions)
    {
        <h6>@question.Title</h6>
        @foreach (var answer in question.Answers)
        {
            <div>
                <input type="radio" name="q_@question.Id" id="a_@answer.Id" value="@answer.Id"/>
                <label for="a_@answer.Id">@answer.Title</label>
            </div>
        }
    }
    <input type="submit" class="btn btn-success" value="Submit answers" />
</form>